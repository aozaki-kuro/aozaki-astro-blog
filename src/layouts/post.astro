---
import Layout from './main.astro'

/** 文章 frontmatter 的结构 */
interface Frontmatter {
  title: string
  description: string
  dateFormatted: string
  image?: string
}

// 给 Astro.props 声明类型，避免后续再出现隐式 any
const { frontmatter } = Astro.props as { frontmatter: Frontmatter }

/** 把 "yyyy/mm/dd" 转成 Date */
function parseDate(dateStr: string): Date {
  const [year, month, day] = dateStr.split('/').map(Number)
  return new Date(year, month - 1, day)
}

/** 把日期格式化成 "yyyy 年 m 月 d 日" */
function formatDate(dateStr: string): string {
  const date = parseDate(dateStr)
  const y = String(date.getFullYear()).padStart(4, '0')
  const m = String(date.getMonth() + 1).padStart(2, '0')
  const d = String(date.getDate()).padStart(2, '0')
  return `${y}/${m}/${d}`
}

const postDate = formatDate(frontmatter.dateFormatted)
---

<Layout title={frontmatter.title} description={frontmatter.description} image={frontmatter.image}>
  <main
    class="relative z-30 mx-auto mt-10 max-w-4xl bg-white pb-1 text-neutral-900 dark:bg-neutral-900 md:rounded-t-md"
  >
    <div
      class="relative flex flex-col justify-stretch border-b-0 border-t border-neutral-200 px-5 pt-6 dark:border-neutral-800 md:rounded-t-2xl md:border-l md:border-r md:pt-20 lg:px-0"
    >
      <div
        class="absolute left-0 top-0 mt-1 hidden h-full w-px -translate-x-px bg-linear-to-b from-transparent to-white dark:to-neutral-900 md:block"
      >
      </div>
      <div
        class="absolute right-0 top-0 mt-1 hidden h-full w-px translate-x-px bg-linear-to-b from-transparent to-white dark:to-neutral-900 md:block"
      >
      </div>
      <h1
        class="mx-auto mb-6 w-full max-w-2xl text-left text-3xl font-bold leading-tight tracking-tighter dark:text-neutral-100 md:mb-12 md:text-4xl md:leading-none lg:text-5xl"
      >
        {frontmatter.title}
        <div>
          <time
            class="font-normal! font-mono text-sm tracking-wide text-neutral-500 dark:text-neutral-400"
          >
            {postDate}
          </time>
        </div>
      </h1>
    </div>

    <article
      class="prose prose-sm mx-auto mb-20 w-full max-w-2xl px-7 dark:prose-invert lg:prose-lg lg:px-0"
    >
      <slot />
    </article>
  </main>
</Layout>
