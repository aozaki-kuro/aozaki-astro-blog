---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

interface Props {
  title: string
  description: string
  url: string
  image: ImageMetadata
}
const { title, description, url, image } = Astro.props as Props
---

<a
  href={url}
  class="group delay-link relative flex h-auto flex-col items-stretch rounded-2xl p-3 duration-300 ease-out"
>
  <span
    class="absolute inset-0 z-20 block h-full w-full rounded-2xl border border-dashed border-transparent bg-transparent duration-300 ease-out group-hover:-translate-x-1 group-hover:-translate-y-1 group-focus:-translate-x-1 group-focus:-translate-y-1 group-active:-translate-x-1 group-active:-translate-y-1 group-hover:border group-hover:border-dashed group-hover:border-neutral-300 group-hover:bg-white group-focus:border group-focus:border-dashed group-focus:border-neutral-300 group-focus:bg-white group-active:border group-active:border-dashed group-active:border-neutral-300 group-active:bg-white dark:group-hover:border-neutral-600 dark:group-hover:bg-neutral-900 dark:group-focus:border-neutral-600 dark:group-focus:bg-neutral-900 dark:group-active:border-neutral-600 dark:group-active:bg-neutral-900"
  ></span>
  <span
    class="absolute inset-0 z-10 block h-full w-full rounded-2xl border border-dashed border-neutral-300 duration-300 ease-out group-hover:translate-x-1 group-hover:translate-y-1 group-focus:translate-x-1 group-focus:translate-y-1 group-active:translate-x-1 group-active:translate-y-1 dark:border-neutral-600"
  ></span>
  <span
    class="relative z-30 block duration-300 ease-out group-hover:-translate-x-1 group-hover:-translate-y-1 group-focus:-translate-x-1 group-focus:-translate-y-1 group-active:-translate-x-1 group-active:-translate-y-1"
  >
    <span class="block w-full">
      <Image
        src={image}
        width={image.width}
        height={image.height}
        alt={title}
        class="aspect-3/2 h-auto w-full rounded-lg object-cover"
      />
    </span>
    <span class="mt-5 mb-1 block w-full px-1 sm:mt-3">
      <span
        class="mb-0 flex items-center text-base font-semibold tracking-tight text-neutral-900 sm:text-lg dark:text-neutral-100"
      >
        <span>{title}</span>
      </span>
      <span
        class="mt-1 block truncate font-mono text-xs font-medium text-neutral-600 sm:mt-0 dark:text-neutral-400"
        >{description}</span
      >
    </span>
  </span>
</a>
