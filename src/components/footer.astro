---
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'

import LogoLight from '@assets/logo/logo_light.svg'
import LogoDark from '@assets/logo/logo_dark.svg'
---

<section
  class="border-t border-neutral-200 bg-white text-gray-700 dark:border-neutral-800 dark:bg-neutral-900"
>
  <div class="container mx-auto flex max-w-5xl flex-col items-center px-7 py-8 sm:flex-row">
    <!-- Logo -->
    <div class="py-4">
      <a
        href="/"
        class="group relative z-30 flex h-5 items-center space-x-1.5 text-base font-semibold text-black dark:text-white"
      >
        <Image src={LogoLight} alt="Logo Light" class="block w-36 dark:hidden" loading="eager" />
        <Image src={LogoDark} alt="Logo Dark" class="hidden w-36 dark:block" loading="eager" />
      </a>
    </div>

    <!-- Year -->
    <p
      class="mt-4 text-sm text-neutral-700 sm:mt-0 sm:ml-4 sm:border-l sm:border-neutral-300 sm:pl-4 dark:text-neutral-100 dark:sm:border-neutral-700"
    >
      Â© {new Date().getFullYear()} Aozaki
    </p>
    <span class="mt-4 inline-flex justify-center space-x-2 sm:mt-0 sm:ml-auto sm:justify-start">
      <a
        href="https://310.im/x"
        target="_blank"
        class="text-neutral-500 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
      >
        <Icon name="tabler:brand-twitter" title="Twitter" size={24} />
      </a>

      <a
        href="https://310.im/gh"
        target="_blank"
        class="text-neutral-500 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
      >
        <Icon name="tabler:brand-github" title="GitHub" size={24} />
      </a>

      <a
        href="https://310.im/tg"
        target="_blank"
        class="text-neutral-500 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
      >
        <Icon name="tabler:brand-telegram" title="Telegram" size={24} />
      </a>

      <a
        href="https://310.im/dc"
        target="_blank"
        class="text-neutral-500 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
      >
        <Icon name="tabler:brand-discord" title="Discord" size={24} />
      </a>

      <a
        href="https://310.im/ms"
        target="_blank"
        class="text-neutral-500 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
      >
        <Icon name="tabler:brand-mastodon" title="Mastodon" size={24} />
      </a>

      <a
        href="mailto:i@aozaki.cc"
        target="_blank"
        class="text-neutral-500 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
      >
        <Icon name="tabler:mail" title="Mail" size={24} />
      </a>
    </span>
  </div>
</section>
